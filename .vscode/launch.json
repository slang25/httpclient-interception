{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Sample App",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceRoot}/samples/SampleApp/bin/Debug/netcoreapp2.1/SampleApp.dll",
      "args": [],
      "cwd": "${workspaceRoot}/samples/SampleApp",
      "stopAtEntry": false,
      "launchBrowser": {
        "enabled": true,
        "args": "${auto-detect-url}/api/repos",
        "windows": {
          "command": "cmd.exe",
          "args": "/C start ${auto-detect-url}/api/repos"
        },
        "osx": {
          "command": "open"
        },
        "linux": {
          "command": "xdg-open"
        }
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceRoot}//samples/SampleApp/Views"
      }
    },
    {
      "name": "Run tests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "dotnet",
      "args": [
        "test"
      ],
      "cwd": "${workspaceRoot}/tests/HttpClientInterception.Tests",
      "console": "internalConsole",
      "stopAtEntry": false,
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
